"use client";

import { useQuery, useMutation } from "convex/react";
import { api } from "../../../convex/_generated/api";
import { useState, useRef, useEffect } from "react";
import * as XLSX from "xlsx";
import { Id } from "../../../convex/_generated/dataModel";
import Link from "next/link";
import {
  Users,
  Search,
  MapPin,
  Phone,
  Briefcase,
  Calendar,
  Trash2,
  MoreHorizontal,
  ChevronLeft,
  ChevronRight,
  Filter,
  Download,
  Upload,
  UserPlus,
  Loader2,
  FileSpreadsheet,
  AlertCircle,
  X,
  CheckCircle,
  Edit,
  Share2,
  Menu
} from "lucide-react";
import { Button } from "@/components/ui/button";
import { Input } from "@/components/ui/input";
import {
  DropdownMenu,
  DropdownMenuContent,
  DropdownMenuItem,
  DropdownMenuTrigger,
  DropdownMenuLabel,
  DropdownMenuSeparator
} from "@/components/ui/dropdown-menu";
import {
  Dialog,
  DialogContent,
  DialogDescription,
  DialogFooter,
  DialogHeader,
  DialogTitle,
  DialogTrigger,
} from "@/components/ui/dialog";
import { Badge } from "@/components/ui/badge";
import { Card, CardContent, CardHeader, CardTitle, CardDescription } from "@/components/ui/card";
import { toast } from "sonner";
import { format } from "date-fns";
import { useUser } from "@clerk/nextjs";
import { Skeleton } from "@/components/ui/skeleton";
import ShareDialog from "@/components/ShareDialog";

// Define strict types for import data matching our schema
type FarmerImportData = {
  fullName: string;
  location: string;
  contactNumber: string;
  districts: string[];
  commodities: string[];
  // Optional/additional fields that might be in excel
  gender?: string;
  email?: string;
};

// Define types for Agro Processor import
type AgroImportData = {
  businessName: string;
  contactPerson: string;
  location: string;
  contactNumber: string;
  email?: string;
  capacity?: string;
  specialization?: string[]; // e.g., ["Mude", "Rice", "Cassava"]
};

export default function FarmersPage() {
  const { user, isLoaded: isUserLoaded } = useUser();

  // Data fetching with pagination support
  const [currentPage, setCurrentPage] = useState(1);
  const itemsPerPage = 50; // Increased for better data density

  const farmers = useQuery(api.farmers.get);
  const agroProcessors = useQuery(api.agroProcessors.get);
  const listings = useQuery(api.listings.get);

  // Mutations
  const deleteFarmer = useMutation(api.farmers.remove);

  // Conditionally use batchCreate if available (fails gracefully if backend not deployed)
  // Using 'any' cast to avoid type errors if api.farmers.batchCreate is not yet in generated types
  const batchCreateFarmers = useMutation((api.farmers as any).batchCreate || api.farmers.create);
  const createAgroProcessor = useMutation(api.agroProcessors.create);
  // Conditionally use batchCreate for Agro if available
  const batchCreateAgro = useMutation((api.agroProcessors as any).batchCreate || api.agroProcessors.create);


  const deleteAgroProcessor = useMutation(api.agroProcessors.remove);

  // Local state
  const [activeTab, setActiveTab] = useState<"farmers" | "agro">("farmers");
  const [searchQuery, setSearchQuery] = useState("");
  const [selectedDistrict, setSelectedDistrict] = useState<string | "all">("all");
  const [isImporting, setIsImporting] = useState(false);
  const [importStats, setImportStats] = useState({ total: 0, success: 0, failed: 0 });
  const [showImportDialog, setShowImportDialog] = useState(false);

  // File input refs
  const fileInputRef = useRef<HTMLInputElement>(null);
  const agroFileInputRef = useRef<HTMLInputElement>(null);

  // New tailored file input refs for top bar
  const tailoredFarmerFileInputRef = useRef<HTMLInputElement>(null);
  const tailoredAgroFileInputRef = useRef<HTMLInputElement>(null);

  // Derived state
  const isLoading = !farmers || !agroProcessors;

  // Filter logic
  const filteredFarmers = farmers?.filter(farmer => {
    const matchesSearch =
      farmer.fullName.toLowerCase().includes(searchQuery.toLowerCase()) ||
      farmer.location.toLowerCase().includes(searchQuery.toLowerCase()) ||
      farmer.contactNumber.includes(searchQuery);

    const matchesDistrict = selectedDistrict === "all" ||
      (farmer.districts && farmer.districts.includes(selectedDistrict));

    return matchesSearch && matchesDistrict;
  }) || [];

  const filteredAgroProcessors = agroProcessors?.filter(processor => {
    return (
      processor.businessName.toLowerCase().includes(searchQuery.toLowerCase()) ||
      processor.contactPerson.toLowerCase().includes(searchQuery.toLowerCase()) ||
      processor.location.toLowerCase().includes(searchQuery.toLowerCase())
    );
  }) || [];

  // Pagination logic
  const currentItems = activeTab === "farmers" ? filteredFarmers : filteredAgroProcessors;
  const totalPages = Math.ceil(currentItems.length / itemsPerPage);
  const paginatedItems = currentItems.slice(
    (currentPage - 1) * itemsPerPage,
    currentPage * itemsPerPage
  );

  // Reset pagination when filters change
  useEffect(() => {
    setCurrentPage(1);
  }, [searchQuery, selectedDistrict, activeTab]);

  // Extract unique districts for filter
  const allDistricts = Array.from(new Set(
    farmers?.flatMap(f => f.districts || []) || []
  )).sort();

  // Excel Import Handler for Farmers
  const handleFarmerFileUpload = async (event: React.ChangeEvent<HTMLInputElement>) => {
    const file = event.target.files?.[0];
    if (!file) return;

    setIsImporting(true);
    setImportStats({ total: 0, success: 0, failed: 0 });

    const reader = new FileReader();
    reader.onload = async (e) => {
      try {
        const data = e.target?.result;
        const workbook = XLSX.read(data, { type: "binary" });
        const sheetName = workbook.SheetNames[0];
        const sheet = workbook.Sheets[sheetName];
        const jsonData = XLSX.utils.sheet_to_json(sheet);

        let successCount = 0;
        let failCount = 0;

        console.log(`Import: Processing ${jsonData.length} records from ${sheetName}`);

        // Process each row
        // Expected headers in Excel: Name, Location, Contact, Districts (comma separated), Commodities (comma separated)
        for (const row: any of jsonData) {
          try {
            // Map Excel columns to our schema - be flexible with column names
            const fullName = row["Name"] || row["Farmer Name"] || row["Full Name"] || row["Farmer"];
            const location = row["Location"] || row["Address"] || row["Village"] || row["City"] || "Unknown";
            const contact = row["Contact"] || row["Phone"] || row["Mobile"] || row["Tel"] || "";

            // Parse comma-separated lists
            const districtStr = row["District"] || row["Districts"] || row["Region"] || "";
            const districts = districtStr ? districtStr.split(",").map((s: string) => s.trim()) : [];

            const commodityStr = row["Commodity"] || row["Commodities"] || row["Crops"] || "";
            const commodities = commodityStr ? commodityStr.split(",").map((s: string) => s.trim()) : [];

            if (fullName) {
              await createFarmer({
                fullName,
                location,
                contactNumber: String(contact),
                districts,
                commodities,
                // Default values for required fields not in simple excel
                preferredMarkets: [],
                certifications: []
              });
              successCount++;
            } else {
              failCount++;
            }
          } catch (err) {
            console.error("Error importing row:", row, err);
            failCount++;
          }
        }

        setImportStats({ total: jsonData.length, success: successCount, failed: failCount });
        toast.success(`Imported ${successCount} farmers successfully!`);

        if (failCount > 0) {
          toast.warning(`Skipped ${failCount} rows due to missing data.`);
        }
      } catch (error) {
        console.error("Import error:", error);
        toast.error("Failed to parse Excel file");
      } finally {
        setIsImporting(false);
        // Reset input
        if (event.target) event.target.value = "";
      }
    };

    reader.readAsBinaryString(file);
  };

  // Excel Import Handler for Agro Processors
  const handleAgroFileUpload = async (event: React.ChangeEvent<HTMLInputElement>) => {
    const file = event.target.files?.[0];
    if (!file) return;

    setIsImporting(true);

    const reader = new FileReader();
    reader.onload = async (e) => {
      try {
        const data = e.target?.result;
        const workbook = XLSX.read(data, { type: "binary" });
        const sheetName = workbook.SheetNames[0];
        const sheet = workbook.Sheets[sheetName];
        const jsonData = XLSX.utils.sheet_to_json(sheet);

        let successCount = 0;
        let failCount = 0;

        console.log(`Import: Processing ${jsonData.length} agro records`);

        for (const row: any of jsonData) {
          try {
            // Flexible matching for Agro Processor columns
            const businessName = row["Business Name"] || row["Name"] || row["Company"] || row["Processor"];
            const contactPerson = row["Contact Person"] || row["Contact"] || row["Manager"] || "Manager";
            const location = row["Location"] || row["Address"] || row["City"] || "Unknown";
            const contact = row["Phone"] || row["Tel"] || row["Mobile"] || row["Contact Number"] || "";
            const capacity = row["Capacity"] || row["Production"] || "";

            const specStr = row["Specialization"] || row["Crops"] || row["Commodities"] || "";
            const specialization = specStr ? specStr.split(",").map((s: string) => s.trim()) : [];

            if (businessName) {
              await createAgroProcessor({
                businessName,
                contactPerson,
                location,
                contactNumber: String(contact),
                processingCapacity: String(capacity),
                specialization
              });
              successCount++;
            } else {
              failCount++;
            }
          } catch (err) {
            console.error("Error importing agro row:", err);
            failCount++;
          }
        }

        toast.success(`Imported ${successCount} agro processors!`);
      } catch (error) {
        console.error("Import error:", error);
        toast.error("Failed to parse Excel file");
      } finally {
        setIsImporting(false);
        if (event.target) event.target.value = "";
      }
    };

    reader.readAsBinaryString(file);
  };

  // --- NEW TAILORED IMPORT HANDLERS ---

  // 1. Specialized Farmer Import (Smart Header Mapping)
  const handleTailoredFarmerImport = async (e: React.ChangeEvent<HTMLInputElement>) => {
    const file = e.target.files?.[0];
    if (!file) return;

    setIsImporting(true);
    const reader = new FileReader();

    reader.onload = async (evt) => {
      try {
        const bstr = evt.target?.result;
        const wb = XLSX.read(bstr, { type: "binary" });
        // Search first 3 sheets to find data
        let targetSheetName = wb.SheetNames[0];
        let farmersToAdd: any[] = [];

        // Strategy: find sheet with "Name" or "Farmer" column
        for (const name of wb.SheetNames.slice(0, 3)) {
          const data = XLSX.utils.sheet_to_json(wb.Sheets[name]);
          if (data.length > 0) {
            const firstRow = data[0] as any;
            const keys = Object.keys(firstRow).map(k => k.toLowerCase());
            // Check for critical columns
            if (keys.some(k => k.includes("name") || k.includes("farmer") || k.includes("beneficiary"))) {
              targetSheetName = name;
              farmersToAdd = data;
              break;
            }
          }
        }

        // If still empty, try default
        if (farmersToAdd.length === 0) {
          farmersToAdd = XLSX.utils.sheet_to_json(wb.Sheets[wb.SheetNames[0]]);
        }

        console.log(`Import: Total Farmers collected: ${farmersToAdd.length}`);

        if (farmersToAdd.length === 0) {
          const sampleHeaders = wb.SheetNames.length > 0 ?
            Object.keys(XLSX.utils.sheet_to_json(wb.Sheets[wb.SheetNames[0]])[0] || {}).join(", ") : "None found";

          alert(`IMPORT FAILED: No farmers detected in ${file.name}.\n\n` +
            `Possible Reasons:\n` +
            `1. Incorrect Sheet: Searched ${wb.SheetNames.length} sheets (${wb.SheetNames.join(", ")}).\n` +
            `2. Missing Headers: We look for column names like 'Name', 'Address', 'Contact', or 'District'.\n` +
            `3. Headers Detected in first sheet: ${sampleHeaders}\n\n` +
            `Please check your Excel file column names and try again!`);
          setIsImporting(false);
          return;
        }

        let success = 0;

        // Process records
        const validFarmers = [];

        // Process records
        for (const row of farmersToAdd) {
          // smart mapping
          const r = row as any;
          // Get all keys
          const keys = Object.keys(r);

          // Find key that looks like name
          const nameKey = keys.find(k => /name|farmer|beneficiary/i.test(k)) || keys[0];
          const distKey = keys.find(k => /district|region|address|location/i.test(k));
          const contactKey = keys.find(k => /phone|contact|tel|mobile/i.test(k));
          const cropsKey = keys.find(k => /crop|commodity|spec/i.test(k));

          const fullName = r[nameKey];

          if (fullName && typeof fullName === 'string' && fullName.length > 2) {
            const district = distKey ? r[distKey] : "Unknown";
            const contact = contactKey ? r[contactKey] : "";

            validFarmers.push({
              fullName: fullName.trim(),
              location: String(district).trim(),
              contactNumber: String(contact),
              districts: [String(district).trim()],
              commodities: cropsKey ? String(r[cropsKey]).split(/,|;/).map(s => s.trim()) : [],
              preferredMarkets: [],
              certifications: [],
              status: "Active"
            });
          }
        }

        if (validFarmers.length > 0) {
          console.log(`Import: Batch creating ${validFarmers.length} farmers...`);
          // Check if we can use batch
          if ((api.farmers as any).batchCreate) {
            await batchCreateFarmers({ farmers: validFarmers });
          } else {
            // Fallback for resiliency
            for (const f of validFarmers) {
              await createFarmer(f);
            }
          }
          success = validFarmers.length;
        }

        toast.success(`Successfully imported ${success} farmers!`);

      } catch (err) {
        console.error(err);
        toast.error("Failed to process Excel file. Check format.");
      } finally {
        setIsImporting(false);
        if (tailoredFarmerFileInputRef.current) tailoredFarmerFileInputRef.current.value = "";
      }
    };
    reader.readAsBinaryString(file);
  };

  // 2. Specialized Agro Import
  const handleTailoredAgroImport = async (e: React.ChangeEvent<HTMLInputElement>) => {
    const file = e.target.files?.[0];
    if (!file) return;

    setIsImporting(true);
    const reader = new FileReader();

    reader.onload = async (evt) => {
      try {
        const bstr = evt.target?.result;
        const wb = XLSX.read(bstr, { type: "binary" });
        const wsname = wb.SheetNames[0];
        const ws = wb.Sheets[wsname];
        const data = XLSX.utils.sheet_to_json(ws);

        let success = 0;

        const validProcessors = [];

        for (const row of data) {
          const r = row as any;
          const keys = Object.keys(r);

          // Smart mapping for Agro
          const nameKey = keys.find(k => /business|company|name|processor/i.test(k)) || keys[0];
          const locKey = keys.find(k => /location|district|address/i.test(k));
          const contactKey = keys.find(k => /phone|contact|tel/i.test(k));
          const capKey = keys.find(k => /capacity|volume|production/i.test(k));

          const businessName = r[nameKey];

          if (businessName) {
            validProcessors.push({
              businessName: String(businessName).trim(),
              contactPerson: "Manager", // Default if missing
              location: locKey ? String(r[locKey]).trim() : "Unknown",
              contactNumber: contactKey ? String(r[contactKey]) : "",
              processingCapacity: capKey ? String(r[capKey]) : "Unknown",
              specialization: [],
              certificationStatus: "Pending"
            });
          }
        }

        if (validProcessors.length > 0) {
          console.log(`Import: Batch creating ${validProcessors.length} agro processors...`);
          if ((api.agroProcessors as any).batchCreate) {
            await batchCreateAgro({ processors: validProcessors });
          } else {
            for (const p of validProcessors) {
              await createAgroProcessor(p);
            }
          }
          success = validProcessors.length;
        }

        toast.success(`Imported ${success} agro processors.`);
      } catch (err) {
        console.error(err);
        toast.error("Failed to import agro processors.");
      } finally {
        setIsImporting(false);
        if (tailoredAgroFileInputRef.current) tailoredAgroFileInputRef.current.value = "";
      }
    };
    reader.readAsBinaryString(file);
  };



  return (
    <div className="flex flex-col h-full bg-slate-50">
      {/* Top Action Bar */}
      <div className="bg-white border-b px-6 py-4 flex items-center justify-between sticky top-0 z-10">
        <div>
          <h1 className="text-2xl font-bold text-slate-900">Database Management</h1>
          <p className="text-slate-500 text-sm">Manage farmers and agro-processor records</p>
        </div>

        <div className="flex items-center gap-3">
          {/* Hidden File Inputs for Imports */}
          <input
            type="file"
            ref={tailoredFarmerFileInputRef}
            className="hidden"
            accept=".xlsx, .xls"
            onChange={handleTailoredFarmerImport}
          />
          <input
            type="file"
            ref={tailoredAgroFileInputRef}
            className="hidden"
            accept=".xlsx, .xls"
            onChange={handleTailoredAgroImport}
          />



          {activeTab === "agro" && (
            <button
              onClick={() => tailoredAgroFileInputRef.current?.click()}
              disabled={isImporting}
              className="bg-purple-700 text-white px-5 py-2.5 rounded-lg hover:bg-purple-800 shadow-sm transition-all flex items-center gap-2 font-medium disabled:opacity-70"
            >
              {isImporting ? <Loader2 className="h-4 w-4 animate-spin" /> : <FileSpreadsheet className="h-4 w-4" />}
              {isImporting ? "Importing..." : "Import Agro"}
            </button>
          )}

          <Button variant="outline" className="gap-2">
            <Download className="h-4 w-4" />
            Export
          </Button>

          <Button className="gap-2 bg-blue-600 hover:bg-blue-700">
            <UserPlus className="h-4 w-4" />
            Add New
          </Button>
        </div>
      </div>

      <div className="flex-1 overflow-hidden flex flex-col p-6 max-w-[1600px] mx-auto w-full">
        {/* Stats Cards */}
        <div className="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
          <Card className="bg-white shadow-sm border-slate-200">
            <CardContent className="p-6">
              <div className="flex justify-between items-start">
                <div>
                  <p className="text-sm font-medium text-slate-500">Total Farmers</p>
                  <h3 className="text-3xl font-bold text-slate-900 mt-2">
                    {farmers?.length || 0}
                  </h3>
                </div>
                <div className="p-3 bg-green-100 rounded-lg text-green-600">
                  <Users className="h-6 w-6" />
                </div>
              </div>
            </CardContent>
          </Card>

          <Card className="bg-white shadow-sm border-slate-200">
            <CardContent className="p-6">
              <div className="flex justify-between items-start">
                <div>
                  <p className="text-sm font-medium text-slate-500">Agro Processors</p>
                  <h3 className="text-3xl font-bold text-slate-900 mt-2">
                    {agroProcessors?.length || 0}
                  </h3>
                </div>
                <div className="p-3 bg-blue-100 rounded-lg text-blue-600">
                  <Briefcase className="h-6 w-6" />
                </div>
              </div>
            </CardContent>
          </Card>

          <Card className="bg-white shadow-sm border-slate-200">
            <CardContent className="p-6">
              <div className="flex justify-between items-start">
                <div>
                  <p className="text-sm font-medium text-slate-500">Active Listings</p>
                  <h3 className="text-3xl font-bold text-slate-900 mt-2">
                    {listings?.length || 0}
                  </h3>
                </div>
                <div className="p-3 bg-amber-100 rounded-lg text-amber-600">
                  <Share2 className="h-6 w-6" />
                </div>
              </div>
            </CardContent>
          </Card>

          <Card className="bg-gradient-to-br from-blue-600 to-indigo-700 text-white shadow-md">
            <CardContent className="p-6">
              <div className="h-full flex flex-col justify-between">
                <div>
                  <h3 className="font-semibold text-lg mb-1">Weekly Report</h3>
                  <p className="text-blue-100 text-sm">Generate activity summary</p>
                </div>
                <Button variant="secondary" size="sm" className="mt-4 w-full bg-white/20 hover:bg-white/30 text-white border-0">
                  Generate PDF
                </Button>
              </div>
            </CardContent>
          </Card>
        </div>

        {/* Data Controls */}
        <div className="bg-white rounded-xl shadow-sm border border-slate-200 flex flex-col flex-1 overflow-hidden">
          {/* Tabs & Filters Header */}
          <div className="border-b p-4 flex flex-col sm:flex-row gap-4 justify-between items-center bg-slate-50/50">
            {/* Tabs */}
            <div className="flex bg-slate-200/60 p-1 rounded-lg self-start">
              <button
                onClick={() => setActiveTab("farmers")}
                className={`px-4 py-2 rounded-md text-sm font-medium transition-all ${activeTab === "farmers"
                  ? "bg-white text-slate-900 shadow-sm"
                  : "text-slate-500 hover:text-slate-700"
                  }`}
              >
                Farmers Directory
              </button>
              <button
                onClick={() => setActiveTab("agro")}
                className={`px-4 py-2 rounded-md text-sm font-medium transition-all ${activeTab === "agro"
                  ? "bg-white text-slate-900 shadow-sm"
                  : "text-slate-500 hover:text-slate-700"
                  }`}
              >
                Agro Processors
              </button>
            </div>

            {/* Filters */}
            <div className="flex items-center gap-3 w-full sm:w-auto">
              <div className="relative flex-1 sm:w-64">
                <Search className="absolute left-3 top-1/2 -translate-y-1/2 h-4 w-4 text-slate-400" />
                <Input
                  placeholder={`Search ${activeTab}...`}
                  value={searchQuery}
                  onChange={(e) => setSearchQuery(e.target.value)}
                  className="pl-9 bg-white"
                />
              </div>

              <DropdownMenu>
                <DropdownMenuTrigger asChild>
                  <Button variant="outline" className="gap-2 bg-white">
                    <Filter className="h-4 w-4 text-slate-500" />
                    Filter
                  </Button>
                </DropdownMenuTrigger>
                <DropdownMenuContent align="end" className="w-56">
                  <DropdownMenuLabel>Filter by District</DropdownMenuLabel>
                  <DropdownMenuSeparator />
                  <DropdownMenuItem onClick={() => setSelectedDistrict("all")}>
                    All Districts
                  </DropdownMenuItem>
                  {allDistricts.slice(0, 10).map(d => (
                    <DropdownMenuItem key={d} onClick={() => setSelectedDistrict(d)}>
                      {d}
                    </DropdownMenuItem>
                  ))}
                </DropdownMenuContent>
              </DropdownMenu>
            </div>
          </div>

          {/* Table Content */}
          <div className="flex-1 overflow-auto relative">
            {isLoading ? (
              <div className="absolute inset-0 flex items-center justify-center bg-white/80 z-10">
                <div className="flex flex-col items-center gap-3">
                  <Loader2 className="h-8 w-8 animate-spin text-blue-600" />
                  <p className="text-slate-500 font-medium">Loading records...</p>
                </div>
              </div>
            ) : (
              <table className="w-full text-sm text-left">
                <thead className="bg-slate-50 text-slate-500 font-medium sticky top-0 z-10 box-shadow-sm">
                  <tr>
                    <th className="px-6 py-4 w-12 text-center">#</th>
                    <th className="px-6 py-4">{activeTab === "farmers" ? "Farmer Name" : "Business Name"}</th>
                    <th className="px-6 py-4">Location</th>
                    <th className="px-6 py-4">Contact</th>
                    <th className="px-6 py-4">
                      {activeTab === "farmers" ? "Commodities" : "Specialization"}
                    </th>
                    <th className="px-6 py-4 text-center">Status</th>
                    <th className="px-6 py-4 text-right">Actions</th>
                  </tr>
                </thead>
                <tbody className="divide-y divide-slate-100">
                  {paginatedItems.length > 0 ? (
                    paginatedItems.map((item, index) => (
                      <tr key={item._id} className="hover:bg-slate-50/80 transition-colors group">
                        <td className="px-6 py-4 text-center text-slate-400">
                          {(currentPage - 1) * itemsPerPage + index + 1}
                        </td>
                        <td className="px-6 py-4 font-medium text-slate-900 group-hover:text-blue-600 transition-colors">
                          {activeTab === "farmers" ? (item as any).fullName : (item as any).businessName}
                        </td>
                        <td className="px-6 py-4 text-slate-600">
                          <div className="flex items-center gap-2">
                            <MapPin className="h-3.5 w-3.5 text-slate-400" />
                            {item.location}
                          </div>
                        </td>
                        <td className="px-6 py-4 text-slate-600">
                          {item.contactNumber || <span className="text-slate-300 italic">No contact</span>}
                        </td>
                        <td className="px-6 py-4">
                          <div className="flex flex-wrap gap-1">
                            {(activeTab === "farmers" ? (item as any).commodities : (item as any).specialization)?.slice(0, 2).map((tag: string) => (
                              <Badge key={tag} variant="secondary" className="font-normal text-xs bg-slate-100 text-slate-600 border-slate-200">
                                {tag}
                              </Badge>
                            ))}
                            {((activeTab === "farmers" ? (item as any).commodities : (item as any).specialization)?.length || 0) > 2 && (
                              <span className="text-xs text-slate-400 pl-1">
                                +{((activeTab === "farmers" ? (item as any).commodities : (item as any).specialization)?.length || 0) - 2} more
                              </span>
                            )}
                          </div>
                        </td>
                        <td className="px-6 py-4 text-center">
                          <span className="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-green-50 text-green-700 border border-green-100">
                            Active
                          </span>
                        </td>
                        <td className="px-6 py-4 text-right">
                          <div className="flex items-center justify-end gap-2 opacity-0 group-hover:opacity-100 transition-opacity">
                            <Button size="icon" variant="ghost" className="h-8 w-8 text-slate-400 hover:text-blue-600">
                              <Edit className="h-4 w-4" />
                            </Button>
                            <Button size="icon" variant="ghost" className="h-8 w-8 text-slate-400 hover:text-red-600">
                              <Trash2 className="h-4 w-4" />
                            </Button>
                          </div>
                        </td>
                      </tr>
                    ))
                  ) : (
                    <tr>
                      <td colSpan={7} className="px-6 py-24 text-center">
                        <div className="flex flex-col items-center justify-center max-w-sm mx-auto">
                          <div className="bg-slate-50 p-4 rounded-full mb-4">
                            <Search className="h-8 w-8 text-slate-300" />
                          </div>
                          <h3 className="text-lg font-medium text-slate-900 mb-1">No records found</h3>
                          <p className="text-slate-500 mb-6">
                            We couldn't find any {activeTab} matching your search query.
                          </p>
                          <Button variant="outline" onClick={() => setSearchQuery("")}>
                            Clear Filters
                          </Button>
                        </div>
                      </td>
                    </tr>
                  )}
                </tbody>
              </table>
            )}
          </div>

          {/* Pagination Footer */}
          <div className="border-t p-4 flex items-center justify-between bg-white text-sm text-slate-500">
            <div>
              Showing <span className="font-medium text-slate-900">{paginatedItems.length > 0 ? (currentPage - 1) * itemsPerPage + 1 : 0}</span> to <span className="font-medium text-slate-900">{Math.min(currentPage * itemsPerPage, currentItems.length)}</span> of <span className="font-medium text-slate-900">{currentItems.length}</span> results
            </div>
            <div className="flex items-center gap-2">
              <Button
                variant="outline"
                size="sm"
                onClick={() => setCurrentPage(p => Math.max(1, p - 1))}
                disabled={currentPage === 1}
                className="h-8 w-8 p-0"
              >
                <ChevronLeft className="h-4 w-4" />
              </Button>
              <span className="text-xs font-medium px-2">
                Page {currentPage} of {Math.max(1, totalPages)}
              </span>
              <Button
                variant="outline"
                size="sm"
                onClick={() => setCurrentPage(p => Math.min(totalPages, p + 1))}
                disabled={currentPage === totalPages || totalPages === 0}
                className="h-8 w-8 p-0"
              >
                <ChevronRight className="h-4 w-4" />
              </Button>
            </div>
          </div>
        </div>
      </div>

      {/* Hidden legacy dialog logic preserved if needed */}
      <Dialog open={showImportDialog} onOpenChange={setShowImportDialog}>
        <DialogContent>
          <DialogHeader>
            <DialogTitle>Import Data</DialogTitle>
            <DialogDescription>
              Upload an Excel file (.xlsx) containing records.
            </DialogDescription>
          </DialogHeader>
          {/* Dialog content here... */}
        </DialogContent>
      </Dialog>
    </div>
  );
}
