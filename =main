import { mutation, query } from "./_generated/server";
import { v } from "convex/values";

// Schema based on src/app/farmers/page.tsx usage
const farmerSchema = {
    fullName: v.string(),
    location: v.string(),
    contactNumber: v.string(),
    districts: v.array(v.string()),
    commodities: v.array(v.string()),
    preferredMarkets: v.optional(v.array(v.string())),
    certifications: v.optional(v.array(v.string())),
    status: v.optional(v.string()),
};

export const get = query({
    args: {},
    handler: async (ctx) => {
        return await ctx.db.query("farmers").collect();
    },
});

export const create = mutation({
    args: farmerSchema,
    handler: async (ctx, args) => {
        const id = await ctx.db.insert("farmers", args);
        // Optional: Add audit log if needed, but keeping it simple for now
        return id;
    },
});

export const batchCreate = mutation({
    args: {
        farmers: v.array(v.object(farmerSchema)),
    },
    handler: async (ctx, args) => {
        const ids = [];
        for (const farmer of args.farmers) {
            const id = await ctx.db.insert("farmers", farmer);
            ids.push(id);
        }
        return ids;
    },
});

export const remove = mutation({
    args: { id: v.id("farmers") },
    handler: async (ctx, args) => {
        await ctx.db.delete(args.id);
    },
});

// Keeping these for compatibility if needed, but 'create' and 'batchCreate' are the key ones for the fix
export const search = query({
    args: { query: v.string() },
    handler: async (ctx, args) => {
        return await ctx.db
            .query("farmers")
            .withSearchIndex("search_name", (q) => q.search("fullName", args.query))
            .collect();
    },
});

